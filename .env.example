# API配置
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=智能体API服务
API_VERSION=1.0.0

# 大模型配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
MODEL_NAME=gpt-4-turbo-preview
TEMPERATURE=0.7
MAX_TOKENS=2000

# LangSmith 配置（可观测性和调试）
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=cus-ai-agent

# 通义千问配置（可选）
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# 数据库配置（可选）
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/dbname

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 工具配置
ENABLE_DATABASE_TOOL=false
ENABLE_API_TOOL=true

# MCP工具配置
ENABLE_MCP_TOOLS=false
MCP_SERVER_URL=http://localhost:3000
MCP_TIMEOUT=30

# 安全配置
CORS_ORIGINS=["http://localhost:3000"]
API_KEY_ENABLED=false
API_KEY=your_api_key_here

# 性能配置
MAX_ITERATIONS=10
TIMEOUT_SECONDS=60

# RAG知识库配置
ENABLE_RAG_TOOL=true
RAG_VECTOR_DB_TYPE=milvus
RAG_MILVUS_HOST=localhost
RAG_MILVUS_PORT=19530
RAG_MILVUS_COLLECTION=knowledge_base

# RAG Embedding 独立配置（可选）
# 如果不设置，将使用上面的 OPENAI_API_KEY 和 OPENAI_API_BASE
# 设置后可以让 RAG 使用独立的 OpenAI API，而对话使用其他 API（如 DeepSeek）
# RAG_OPENAI_API_KEY=your_openai_api_key_for_embedding
# RAG_OPENAI_API_BASE=https://api.openai.com/v1

# RAG Embedding 模型配置
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5

